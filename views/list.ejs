<%- include("header", {page: 'todo' , userName: userName}) -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newTasks.forEach(task=> { %>
  <form action="/delete-todo" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= task._id %>"
        onchange="this.form.submit()" />
      <p><%= task.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>" />
  </form>

  <% }); %>

  <form class="item" action="/add-todo" method="post">
    <input
      type="text"
      name="task"
      placeholder="New Task"
      autocomplete="off"
      required />
    <button type="submit" name="listName" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
